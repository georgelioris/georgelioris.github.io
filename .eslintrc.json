{
  "env": {
    "browser": true,
    "es6": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["react-hooks", "prettier", "react", "import", "jsx-a11y"],
  "rules": {
    "react/jsx-wrap-multilines": [
      "error",
      { "declaration": false, "assignment": false }
    ],
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "global-require": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "settings": {
    "import/extensions": [".js", ".jsx"]
  }
}
